/**
 * # Firestore Security Rules: Gia Đình Gắn Kết
 *
 * ## Core Philosophy
 * This ruleset enforces a strict user-ownership security model. All data that is
 * considered private or user-specific, such as tasks and redemptions, is nested
 * within a user's own data tree (`/users/{userId}`). Access is granted only to the authenticated
 * user who owns that specific data tree or to users who have a defined relationship
 * (like a task's assigner). This prevents users from accessing or even
 * discovering the data of other users inappropriately.
 *
 * ## Data Structure
 * - `/users/{userId}`: Stores user profiles. Each user can manage their own profile.
 * - `/users/{userId}/tasks/{taskId}`: A subcollection for tasks assigned to a user. Access is shared between the task's assignee (the owner of the subcollection) and its assigner.
 * - `/users/{userId}/redemptions/{redemptionId}`: A subcollection for a user's reward redemptions, accessible only by that user.
 * - `/rewards/{rewardId}`: A top-level collection for globally available rewards. This data is public for all to read.
 * - `/tasks/{taskId}`: This is NOT a top-level collection. It represents a collection group query across all `tasks` subcollections.
 *
 * ## Key Security Decisions
 * - **Default Deny**: All paths are closed by default. Access is only granted explicitly.
 * - **Path-Based Ownership**: User-specific data (`tasks`, `redemptions`) is stored in subcollections under `/users/{userId}` to enforce ownership and simplify rules.
 * - **Restricted User Listing**: Listing all users is disallowed for general users. Parents are allowed to query for users with the role of 'child' for administrative purposes.
 * - **Admin-Only Writes for Global Data**: The `/rewards` collection is publicly readable, but all write operations are disabled pending the implementation of a specific admin role.
 *
 * ## Denormalization for Authorization
 * The ruleset relies on denormalized fields for efficient and secure authorization checks, avoiding slow and costly `get()` calls.
 * - **Task Ownership**: Each task document contains both an `assignerId` and an `assigneeId`. This allows rules to grant access to either party without needing to traverse the document tree.
 *
 * ## Collection Group Queries
 * A rule is defined for the `tasks` collection group (`match /tasks/{taskId}`) to allow parents to query for all tasks they have assigned, regardless of which user's subcollection they reside in.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    // --------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function docExists() {
      return resource != null;
    }

    function isParent() {
      // This is a potentially expensive call. Use with caution.
      // It's used here to allow parents to list children and create tasks.
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'parent';
    }
    
    function isAssigner(task) {
        return isSignedIn() && request.auth.uid == task.assignerId;
    }

    // Validation Functions
    // --------------------------------

    function isValidUserCreate(userId) {
      let data = request.resource.data;
      return data.id == userId &&
             (data.role == 'parent' || data.role == 'child');
    }

    function isUserUpdateValid() {
      let data = request.resource.data;
      // Prevent changing critical, immutable fields
      return data.id == resource.data.id &&
             data.role == resource.data.role &&
             data.email == resource.data.email;
    }
    
    function isValidTaskCreate(userId) {
        let data = request.resource.data;
        // The creator must be the assigner, and the assigneeId must match the user path.
        return data.assignerId == request.auth.uid && 
               data.assigneeId == userId;
    }

    function isTaskUpdateValid() {
        let data = request.resource.data;
        // Prevent changing ownership fields
        return data.assignerId == resource.data.assignerId &&
               data.assigneeId == resource.data.assigneeId;
    }
    
    function isValidRedemptionCreate(userId) {
      return request.resource.data.userId == userId;
    }

    // Rules for Collections
    // --------------------------------
    
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if isParent() && request.query.where[0][0] == 'role' && request.query.where[0][2] == 'child';
      allow create: if isOwner(userId) && isValidUserCreate(userId);
      allow update: if isOwner(userId) && docExists() && isUserUpdateValid();
      allow delete: if false; // Deletions should be handled by a backend process

      match /redemptions/{redemptionId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && isValidRedemptionCreate(userId);
        allow update, delete: if isOwner(userId) && docExists();
      }
      
      match /tasks/{taskId} {
        // The assignee can get, update, and delete their own tasks.
        allow get, delete: if isOwner(userId) && docExists();
        allow update: if isOwner(userId) && docExists() && isTaskUpdateValid();
        
        // The parent who assigned the task can also read it and approve it.
        allow get: if docExists() && isAssigner(resource.data);
        allow update: if docExists() && isAssigner(resource.data) && isTaskUpdateValid();

        // A parent can create a task for a child. The path's {userId} must be the assignee.
        allow create: if isParent() && isValidTaskCreate(userId);
      }
    }

    match /rewards/{rewardId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false; // Managed by backend/admins
    }
    
    // This is a collection group query rule. It allows a parent to query all tasks
    // they have assigned across all user subcollections.
    match /tasks/{taskId} {
      allow list: if isParent() && request.query.where[0][0] == 'assignerId' && request.query.where[0][2] == request.auth.uid;
    }
  }
}

    